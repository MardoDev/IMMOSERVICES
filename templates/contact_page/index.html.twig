{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}
{% block stylesheets %}
    {# {{ parent() }}
    {{ encore_entry_script_tags('app_home_page') }} #}
    {# Importation de boostrap #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    {# Intégration de openStreetMap #}
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" integrity="sha256-p4NxAoJBhIIN+hmNHrzRCf9tD/miZyoHS5obTRR9BMY=" crossorigin=""/>
    {# Importation de swipper #}
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"/>
    <link rel="stylesheet" href="{{ asset('build/app.css') }}">
    <link rel="stylesheet" href="{{ asset('build/app_aboutus_page.css') }}">
    <link rel="stylesheet" href="{{ asset('build/app_contact_page.css') }}">
{% endblock %}

{% block body %}
    {% block main %}
        <section class="section-bg" style="background: url({{ asset('images/homePage/banner.png') }}) no-repeat">
            <div class="overlay-bg">
                <h2>NOUS CONTACTER</h2>
            </div>
        </section>
        <section class="section-contact">
             {# <h4>NOUS CONTACTER</h4> #}
              <div class="section-contact-container">
                  <div class="section-contact-left">
                      <h5 class="section-contact-left-title">ADRESSE</h5>
                      <div class="description-contact">
                          <p>15, rue du Château<br/>75001 Paris, Frace </p>
                      </div>
                      <div id="map"></div>
                      <div class="contact-entete">
                          <h5 class="contact-entete-title">APPELEZ-NOUS OU ENVOYEZ-NOUS UN E-MAIL</h5>
                          <p>E-mail : Info@monsite.fr<br/>Tél : 01 23 45  67 89<br/>Fax : 01 23 45 67 89  </p>
                      </div>
                  </div>
                  <div class="section-contact-right">
                      <h4>VOUS POUVEZ NOUS RENSEIGNEZ UN MESSAGE VIA LE FORMULAIRE</h4>
                      <form>
                          <div class="mb-3">
                              <label for="prenom" class="form-label">Prénom</label>
                              <input class="form-control" type="text" id="prenom" placeholder="Prénom ..." aria-label="entre le prenom">
                          </div>
                          <div class="mb-3">
                              <label for="nom" class="form-label">Nom de famille</label>
                              <input class="form-control" type="text" id="nom" placeholder="Nom ..." aria-label="entre le nom de famille">
                          </div>
                          <div class="mb-3">
                              <label for="email" class="form-label">Email <span>*</span> </label>
                              <input type="email" class="form-control" id="email" placeholder="Votre Email ..." aria-describedby="emailHelp">
                          </div>
                          <div class="mb-3">
                              <label for="objet" class="form-label">Objet</label>
                              <input class="form-control" type="text" id="objet" placeholder="Objet ..." aria-label="objet">
                          </div>
                          <div class="mb-3">
                              <label for="message" class="form-label">Message</label>
                              <textarea class="form-control" id="message" rows="3"></textarea>
                          </div>
                          <button type="submit" class="btn btn-primary">Envoyez</button>
                      </form>
                  </div>
              </div>
        </section>
        <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js" integrity="sha256-20nQCchB9co0qIjJZRGuk2/Z9VM+kNiyxNV1lvTlZBo=" crossorigin=""></script>
        <script src="{{ asset('js/openStreetMap.js') }}"></script>
    {% endblock %}
{% endblock %}
